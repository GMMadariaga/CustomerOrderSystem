{
  "openapi": "3.0.1",
  "info": {
    "title": "CustomerOrderSystem.Presentation",
    "version": "1.0"
  },
  "paths": {
    "/api/Customer": {
      "get": {
        "tags": [
          "Customer"
        ],
        "summary": "Obtiene la lista completa de clientes registrados.",
        "responses": {
          "200": {
            "description": "Retorna la lista de clientes.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CustomerResponse"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CustomerResponse"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/CustomerResponse"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Customer"
        ],
        "summary": "Registra un nuevo cliente en el sistema.",
        "description": "Ejemplo de petición:\r\n\r\n    POST /api/Customer\r\n    {\r\n       \"name\": \"Guillermo\",\r\n       \"email\": \"guille@test.com\"\r\n    }",
        "requestBody": {
          "description": "Datos del nuevo cliente.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerCreateRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerCreateRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CustomerCreateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerResponse"
                }
              }
            }
          },
          "201": {
            "description": "Cliente creado exitosamente."
          },
          "400": {
            "description": "Si los datos enviados son inválidos (formato de email o nombre vacío)."
          }
        }
      }
    },
    "/api/Customer/{id}": {
      "get": {
        "tags": [
          "Customer"
        ],
        "summary": "Recupera un cliente específico mediante su identificador único (GUID).",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Identificador único del cliente.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Si el cliente es encontrado.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerResponse"
                }
              }
            }
          },
          "404": {
            "description": "Si el cliente no existe."
          }
        }
      }
    },
    "/api/Order/{id}": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Recupera una orden específica por su identificador único.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID de la orden.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna la orden encontrada.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          },
          "404": {
            "description": "Si la orden no existe."
          }
        }
      }
    },
    "/api/Order/customer/{customerId}": {
      "get": {
        "tags": [
          "Order"
        ],
        "summary": "Obtiene el historial de órdenes asociado a un cliente específico.",
        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "description": "ID del cliente.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna la lista de órdenes (vacía si el cliente no tiene).",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderResponse"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderResponse"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/OrderResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/Order/{customerId}": {
      "post": {
        "tags": [
          "Order"
        ],
        "summary": "Crea una nueva orden de compra para un cliente existente.",
        "description": "La orden se crea inicialmente con estado 'Created'.",
        "parameters": [
          {
            "name": "customerId",
            "in": "path",
            "description": "Identificador único del cliente.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/OrderResponse"
                }
              }
            }
          },
          "201": {
            "description": "Orden creada exitosamente."
          },
          "400": {
            "description": "Si el cliente no existe."
          }
        }
      }
    },
    "/api/Order/{orderId}/cancel": {
      "put": {
        "tags": [
          "Order"
        ],
        "summary": "Cambia el estado de una orden a 'Cancelled'.",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "ID de la orden a cancelar.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "204": {
            "description": "Orden cancelada con éxito."
          },
          "400": {
            "description": "Si la orden no existe."
          }
        }
      }
    },
    "/api/Order/{orderId}/complete": {
      "put": {
        "tags": [
          "Order"
        ],
        "summary": "Cambia el estado de una orden a 'Completed'.",
        "parameters": [
          {
            "name": "orderId",
            "in": "path",
            "description": "ID de la orden a completar.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "204": {
            "description": "Orden completada con éxito."
          },
          "400": {
            "description": "Si la orden no existe."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CustomerCreateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Request para crear un nuevo cliente"
      },
      "CustomerResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "Response de un cliente"
      },
      "OrderResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "customerId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false,
        "description": "Response de una orden"
      }
    }
  }
}